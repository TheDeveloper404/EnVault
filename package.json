{
  "name": "envault",
  "version": "1.0.0",
  "private": true,
  "description": "Self-hosted environment variable manager with UI + API + CLI",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "cd apps/api && npx prisma migrate deploy && node dist/index.js",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:integration": "pnpm -r test:integration",
    "test:e2e": "pnpm -r test:e2e",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "db:migrate": "pnpm --filter @envault/api db:migrate",
    "db:generate": "pnpm --filter @envault/api db:generate",
    "db:deploy": "cd apps/api && npx prisma migrate deploy"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
