{
  "name": "envault",
  "version": "1.0.0",
  "private": true,
  "description": "Self-hosted environment variable manager with UI + API + CLI",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "cd apps/api && npx prisma migrate deploy && node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:coverage": "vitest run tests/unit --coverage",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test --config apps/web/playwright.config.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "pnpm -r typecheck",
    "db:migrate": "pnpm --filter @envault/api db:migrate",
    "db:generate": "pnpm --filter @envault/api db:generate",
    "db:deploy": "cd apps/api && npx prisma migrate deploy"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
