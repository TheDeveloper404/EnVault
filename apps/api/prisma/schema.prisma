generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  name         String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  projects     Project[]
  sessions     Session[]
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  refreshHash  String   @unique
  expiresAt    DateTime
  revokedAt    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId, revokedAt])
  @@index([expiresAt])
}

model Project {
  id          String        @id @default(uuid())
  name        String        @unique
  description String?
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  environments Environment[]
  schema      Schema?
  auditLogs   AuditLog[]
}

model Environment {
  id          String        @id @default(uuid())
  name        String
  projectId   String
  project     Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  variables   EnvVariable[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([projectId, name])
}

model EnvVariable {
  id            String      @id @default(uuid())
  key           String
  value         String      // Encrypted value
  isSecret      Boolean     @default(false)
  environmentId String
  environment   Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  versions      EnvVariableVersion[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([environmentId, key])
}

model EnvVariableVersion {
  id            String      @id @default(uuid())
  variableId    String?
  variable      EnvVariable? @relation(fields: [variableId], references: [id], onDelete: SetNull)
  environmentId String
  key           String
  value         String      // Encrypted value snapshot
  isSecret      Boolean
  operation     String      // CREATE, UPDATE, DELETE, IMPORT, RESTORE
  createdAt     DateTime    @default(now())

  @@index([environmentId, key, createdAt])
  @@index([variableId, createdAt])
}

model Schema {
  id        String   @id @default(uuid())
  content   String   // JSON content
  projectId String   @unique
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String   // CREATE, UPDATE, DELETE, VIEW
  entityType  String   // PROJECT, ENVIRONMENT, VARIABLE, SCHEMA
  entityId    String
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  userId      String?
  actor       String   // user email or "local-user"
  details     String?  // JSON with changes (masked for secrets)
  createdAt   DateTime @default(now())
}
