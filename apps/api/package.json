{
  "name": "@envault/api",
  "version": "1.0.0",
  "description": "EnVault REST API - Fastify + Prisma + SQLite",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:e2e": "pnpm db:deploy && pnpm dev",
    "start": "node dist/index.js",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@envault/core": "workspace:*",
    "@fastify/cors": "^8.4.0",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^5.6.0",
    "fastify": "^4.24.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prisma": "^5.6.0",
    "tsx": "^4.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
