# Build stage for Web
FROM node:20-alpine AS envault_web_builder
WORKDIR /app
RUN corepack enable && corepack prepare pnpm@8 --activate

COPY pnpm-workspace.yaml pnpm-lock.yaml package.json tsconfig.json ./
COPY apps/web ./apps/web

RUN pnpm install --frozen-lockfile --filter @envault/web...
RUN pnpm --filter @envault/web build

# Production stage with nginx
FROM nginx:alpine AS envault_web_runtime
COPY --from=envault_web_builder /app/apps/web/dist /usr/share/nginx/html
COPY infra/docker/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
