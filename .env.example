# EnVault Environment Variables
# Copy to .env and fill in your values

# Required: 64-char hex or base64 key for encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENVAULT_MASTER_KEY=aabbccdd11223344aabbccdd11223344aabbccdd11223344aabbccdd11223344

# Optional: comma-separated list of previous keys used only for decryption fallback during key rotation
ENVAULT_MASTER_KEY_PREVIOUS=

# Database (PostgreSQL)
DATABASE_URL=postgresql://envault:envault_dev_password@localhost:5432/envault
DB_PASSWORD=envault_dev_password

# Port map
PORT_BASE=3090
BE_PORT=3091
FE_PORT=3092
API_PORT=3093

# Optional: API Configuration
PORT=3091
HOST=0.0.0.0
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Optional: CORS (for development)
CORS_ORIGIN=true

# Optional: JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Optional: Alerting webhook (Slack/Discord-compatible JSON webhook)
ALERT_WEBHOOK_URL=
